generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User {
    id Int @default(autoincrement()) @id
    name String
    password String
    email String @unique
    posts Post[] 
}

model Post {
    id Int @default(autoincrement()) @id
    owner User @relation(fields: [ownerId], references: [id])
    ownerId Int
    ticket Ticket?
}

model Ticket {
    id Int @default(autoincrement()) @id
    post Post @relation(fields: [postId], references: [id])
    postId Int
}