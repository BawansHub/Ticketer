{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommend",
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/no-unresolved": [
            0,
            {"case-sensitive": false}
        ],
        "import/extensions": [
            0,
            {"case-sensitive": false},
            "ignorePackages",
            {
                "ts": "never",
                "tsx": "never"
            }
        ],
        "import/prefer-default-export": [
            0
        ],
        "comma-dangle": [
            2,
            "always-multiline"
        ],
        "linebreak-style": [
            "error",
            0
        ]
    },
    "ignorePatterns": ["**/__test__/*"]
}
